{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@core/*": [
        "core/*"
      ],
      "@infra/*": [
        "infra/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@test/*": [
        "test/*"
      ]
    },                               
    "outDir": "dist",                              
    "newLine": "lf",          
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,
    "strict": true,                  
    "skipLibCheck": true
  },
  "exclude": [
    "node_module"
  ],
  "include": ["src", "vitest.config.ts"]
}